<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zenlabs.sevenminuteworkout.utils.FontTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/slide_to_start_workout"
        android:textColor="@android:color/white"
        android:textSize="@dimen/slide_text_size"
        font:customFont="SohoGothicPro-Regular.otf" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/slider_mask">

        <com.zenlabs.sevenminuteworkout.utils.FontTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/slide_to_start_workout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_text_size"
            android:visibility="invisible"
            font:customFont="SohoGothicPro-Regular.otf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#6602b1b4">

        <com.zenlabs.sevenminuteworkout.utils.FontTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/slide_to_start_workout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_text_size"
            android:visibility="invisible"
            font:customFont="SohoGothicPro-Regular.otf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#6602b1b4">

        <com.zenlabs.sevenminuteworkout.utils.FontTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/slide_to_start_workout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_text_size"
            android:visibility="invisible"
            font:customFont="SohoGothicPro-Regular.otf" />
    </RelativeLayout>

</RelativeLayout>