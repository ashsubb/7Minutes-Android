<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/achievementsListItemTextContainerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/forum_nav_bar_padding"
        android:layout_marginRight="@dimen/forum_nav_bar_padding"
        android:layout_toLeftOf="@+id/achievementsListItemImageView"
        android:gravity="center|left">

        <com.zenlabs.sevenminuteworkout.utils.FontTextView
            android:id="@+id/achievementListItemTitileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@android:color/white"
            android:textSize="@dimen/achievements_title_text_size"
            font:customFont="SohoGothicPro-Regular.otf" />

        <com.zenlabs.sevenminuteworkout.utils.FontTextView
            android:id="@+id/achievementListItemSubTitileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/achievementListItemTitileTextView"
            android:gravity="center|left"
            android:textColor="@color/gray_achievements_text_color"
            android:textSize="@dimen/achievements_sub_title_text_size"
            font:customFont="SohoGothicPro-Regular.otf" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/achievementsListItemImageView"
        android:layout_width="@dimen/achievements_badge_w"
        android:layout_height="@dimen/achievements_badge_h"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
